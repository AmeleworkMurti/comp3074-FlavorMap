<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="top|center_horizontal"
        android:layout_marginTop="10dp">

        <!--  Back Button added-->
        <ImageView
            android:id="@+id/btnBackAbout"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_gravity="start"
            android:src="@drawable/ic_back_arrow"
            android:padding="4dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"/>

        <!-- App Logo -->
        <ImageView
            android:id="@+id/aboutLogo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_flavormap"
            android:contentDescription="FlavorMap Logo"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <!-- App Name -->
        <TextView
            android:id="@+id/aboutAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FlavorMap"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="12dp" />

        <!-- Short App Description -->
        <TextView
            android:id="@+id/aboutDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FlavorMap is an easy and friendly restaurant guide app created to help users explore, review, and share their favorite dining spots across the city."
            android:textSize="16sp"
            android:gravity="center"
            android:padding="6dp"
            android:textColor="#555555"
            android:layout_marginBottom="22dp" />

        <!-- Line Divider -->
        <View
            android:layout_width="80dp"
            android:layout_height="2dp"
            android:background="#DDDDDD"
            android:layout_marginBottom="22dp" />

        <!-- Developer Section -->
        <TextView
            android:id="@+id/aboutCreatorsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Created By"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="10dp" />

        <TextView
            android:id="@+id/aboutCreatorsList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• Amelework Murti\n• Fitsum Asgedom"
            android:textSize="18sp"
            android:textColor="#444444"
            android:layout_marginBottom="25dp" />

        <!-- Footer Note -->
        <TextView
            android:id="@+id/aboutFooter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COMP3074 – Android Mobile Development\nGeorge Brown College (2025)"
            android:textSize="14sp"
            android:textColor="#777777"
            android:gravity="center"
            android:layout_marginBottom="20dp" />

    </LinearLayout>

</ScrollView>
